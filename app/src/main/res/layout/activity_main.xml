<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tincio.capstoneproject.presentation.activity.MainActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/player"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/name_image_main"
        android:id="@+id/image_background" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ball"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_main"
        android:contentDescription="@string/name_image_main"
        app:layout_constraintRight_toRightOf="parent" />
    <com.tincio.capstoneproject.presentation.customview.CustomMainTextView
        style="@style/AppTheme.TextTitle"
        android:text="@string/app_name"
        android:id="@+id/txt_name"
        android:layout_marginBottom="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
